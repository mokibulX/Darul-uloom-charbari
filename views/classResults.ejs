<%- include("header") %>

<h2>Class-wise Results</h2>

<form method="GET" action="/results">
  <label>Select Class:</label>
  <select name="classId" onchange="this.form.submit()">
    <option value="">--Select--</option>
    <% classes.forEach(c => { %>
      <option value="<%= c._id %>" <%= selectedClass == c._id ? "selected" : "" %>><%= c.name %></option>
    <% }) %>
  </select>
</form>

<% if(results && results.length > 0) { %>
  <table border="1" cellpadding="5">
    <thead>
      <tr>
        <th>Position</th>
        <th>Student Name</th>
        <th>Kitab</th>
        <th>Full Mark</th>
        <th>Obtained Mark</th>
        <th>Pass/Fail</th>
        <th>Division</th>
      </tr>
    </thead>
    <tbody>
      <% results.forEach((r, idx) => { %>
        <tr>
          <td><%= idx + 1 %></td>
          <td><%= r.studentId.name %></td>
          <td><%= r.kitab %></td>
          <td><%= r.fullMark %></td>
          <td><%= r.obtainedMark %></td>
          <td><%= r.passFail %></td>
          <td><%= r.division %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } else if(selectedClass) { %>
  <p>No results found for this class.</p>
<% } %>

<%- include("footer") %>
