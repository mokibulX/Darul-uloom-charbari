<%- include("header") %>

<div class="container my-5">
  <h2 class="text-center mb-4">All Classes</h2>

  <div class="row justify-content-center">
    <% if (classes && classes.length > 0) { %>
      <% classes.forEach(c => { %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-lg h-100 text-center">
            <img src="<%= c.image %>" class="card-img-top" style="height:200px; object-fit:cover;">
            <div class="card-body">
              <h4 class="card-title fw-bold"><%= c.name %></h4>
              <a href="/class/<%= c._id %>" class="btn btn-primary mt-3">View Class</a>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p class="text-center text-muted">No classes available.</p>
    <% } %>
  </div>
</div>
 <%- include('footer') %>
</body>