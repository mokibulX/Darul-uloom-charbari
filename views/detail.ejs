<%- include('header') %>
<body>
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="card shadow-lg w-100" style="max-width: 800px; border-radius: 15px;">
            
            <div class="card-header text-center bg-primary text-white rounded-top">
                <h2 class="mb-0">Darul Uloom Charbari (Gazarikandi) Madrassa</h2>
                <small>Student Information Details</small>
            </div>

            <div class="card-body">
                <div class="text-center mb-4">
                   <img src="<%= user.image %>" alt="<%= user.name %>" class="img-fluid" style="max-height:200px; border-radius: 12px;">
                    
                    <h3 class="mt-3"><%= user.name %></h3>
                    
                    
                </div>

                <table class="table table-bordered table-striped">
                    <tbody>
                       <tr>
             <th>Admission Conditions</th>
                <td>
             <% if (user.agreeAll) { %>
           <span class="badge bg-success">Accepted</span>
          <% } else { %>
             <span class="badge bg-danger">Not Accepted</span>
              <% } %>
            </td>
             </tr>

                        <tr>
                            <th>Student Type</th>
                            <td>
                                <% if(user.type === "old"){ %>
                                    <span class="badge bg-success px-3 py-2">Old Student <%= user.type %></span>
                                <% } %>
                                <% if(user.type === "new"){ %>
                                    <span class="badge bg-info px-3 py-2">New Student <%= user.type %></span>
                                <% } %>
                            </td>
                        </tr>
                        <tr>
                            <th>Class</th>
                            <td><%= user.class %></td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td><%= user.name %></td>
                        </tr>
                        <tr>
                            <th>Father's Name</th>
                            <td><%= user.sonOf %></td>
                        </tr>
                        <tr>
                            <th>Date of Birth</th>
                            <td><%= user.dateOfbrith %></td>
                        </tr>
                        <tr>
                            <th>Village</th>
                            <td><%= user.vill %></td>
                        </tr>
                        <tr>
                            <th>Post</th>
                            <td><%= user.post %></td>
                        </tr>
                        <tr>
                            <th>Police Station</th>
                            <td><%= user.police %></td>
                        </tr>
                        <tr>
                            <th>District</th>
                            <td><%= user.distric %></td>
                        </tr>
                        <tr>
                            <th>State</th>
                            <td><%= user.state %></td>
                        </tr>
                        <tr>
                            <th>Country</th>
                            <td><%= user.country %></td>
                        </tr>
                        <tr>
                            <th>PIN</th>
                            <td><%= user.pin %></td>
                        </tr>
                        <tr>
                            <th>Phone</th>
                            <td><%= user.phone %></td>
                        </tr>
                        <tr>
                             <th>Admission Date: </th> 
                             <td><%= new Date(user.date).toLocaleString("en-IN", {
                               day: "2-digit", month: "2-digit", year: "numeric",
                                 hour: "2-digit", minute: "2-digit", hour12: true
                              }) %></td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td><%= user.email %></td>
                        </tr>
                        <tr>
                            <th>Amount</th>
                            <td><%= user.amount %></td>
                        </tr>
                        <tr>
                            <th>Password</th>
                            <td><%= user.password %></td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="card-footer text-center">
                <a href="/idcard/<%= user._id %>" class="btn btn-primary">üñ® Print Id Card</a>
                <a href="/" class="btn btn-secondary">üè† Home</a>
            </div>
        </div>
    </div>
</body>
