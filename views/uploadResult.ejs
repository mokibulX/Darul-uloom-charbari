<%- include("header") %>

<div class="container my-5">
  <div class="card shadow-lg border-0 rounded-3">
    <div class="card-body">
      <h1 class="text-center text-primary mb-4">ðŸ“Š Upload Student Results</h1>

      <form action="/admin/result/upload-form" method="get">
        <!-- Class Select -->
        <div class="mb-3">
          <label for="classId" class="form-label fw-bold">Choose Class</label>
          <select id="classId" name="classId" class="form-select" required>
            <option value="">-- Select Class --</option>
            <% classes.forEach(c => { %>
              <option value="<%= c._id %>"><%= c.name %></option>
            <% }) %>
          </select>
        </div>

        <button type="submit" class="btn btn-success w-100">Proceed to Upload</button>
      </form>
    </div>
  </div>
</div>

