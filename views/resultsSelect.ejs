<%- include("header") %>

<div class="container mt-5">
  <div class="card shadow-lg border-0 rounded-3">
    <div class="card-body">
      <h2 class="text-center text-primary mb-4">ðŸ“˜ Select Class & Year</h2>

      <form action="/results/view" method="get">
        <!-- Class Select -->
        <div class="mb-3">
          <label for="classId" class="form-label fw-bold">Choose Class</label>
          <select id="classId" name="classId" class="form-select" required>
            <option value="">-- Select Class --</option>
            <% classes.forEach(c => { %>
              <option value="<%= c._id %>"><%= c.name %></option>
            <% }) %>
          </select>
        </div>

        <!-- Year Input -->
        <div class="mb-3">
          <label for="examYear" class="form-label fw-bold">Exam Year</label>
          <input type="number" id="examYear" name="examYear" 
                 class="form-control" placeholder="e.g. 2025" required>
        </div>

        <button type="submit" class="btn btn-success w-100">View Results</button>
      </form>
    </div>
  </div>
</div>

<%- include("footer") %>
