<%- include('header') %>
<body>
  <div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; background: linear-gradient(135deg, #1e3c72, #2a5298, #0f2027);">
    <div class="card p-4 p-md-5 shadow-lg position-relative" style="max-width: 550px; width: 100%; border-radius: 20px; text-align: center; background: linear-gradient(145deg, #ffffff, #e6f0fa); overflow: hidden;">
      
      <!-- Decorative Overlay -->
      <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(45deg, rgba(255, 65, 108, 0.1), rgba(255, 255, 255, 0.2)); opacity: 0.5; z-index: 0;"></div>

      <!-- Success Icon -->
      <div class="mb-4 position-relative" style="z-index: 1;">
        <span style="font-size: 4rem; color: #28a745; animation: pulse 2s infinite;">
          âœ…
        </span>
      </div>

      <!-- Success Heading -->
      <h2 class="text-success fw-bold mb-3 display-6 position-relative" style="z-index: 1; text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);">
        Form Submitted Successfully
      </h2>

      <!-- Status Message -->
      <p class="fs-5 text-muted position-relative" style="z-index: 1;">
        Your admission form has been submitted and is currently 
        <span class="fw-bold text-warning">pending approval</span>.
      </p>

      <!-- Application ID Section -->
      <% if (typeof applicationId !== "undefined" && applicationId) { %>
        <div class="alert alert-info mt-4 position-relative" style="border-radius: 15px; background: linear-gradient(90deg, #e6f0fa, #d4e6fc); z-index: 1;">
          <h5 class="mb-1 text-dark fw-semibold">ðŸ“Œ Tracking ID</h5>
          <span class="fw-bold text-dark"><%= applicationId %></span>
          <p class="small text-muted mb-0">Use this ID to check your admission status later.</p>
        </div>
      <% } %>

      <!-- Home Button -->
      <a href="/" class="btn btn-primary mt-4 px-5 py-3 position-relative" 
         style="border-radius: 15px; background: linear-gradient(90deg, #ff416c, #ff4b2b); border: none; font-weight: 600; z-index: 1;"
         onmouseover="this.style.opacity='0.9'; this.style.transform='translateY(-3px)'" 
         onmouseout="this.style.opacity='1'; this.style.transform='translateY(0)'">
        Go to Home
      </a>
    </div>
  </div>

  <%- include('footer') %>

  <style>
    body {
      font-family: 'Roboto Slab', serif;
      min-height: 100vh;
      overflow: hidden;
    }

    .card {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      box-shadow: 0 12px 30px rgba(0, 0, 0, 0.4);
    }

    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.5);
    }

    .btn-primary {
      transition: all 0.3s ease;
    }

    .btn-primary:hover {
      box-shadow: 0 5px 15px rgba(255, 65, 108, 0.4);
    }

    @keyframes pulse {
      0% { transform: scale(1); }
      50% { transform: scale(1.2); }
      100% { transform: scale(1); }
    }

    @media (max-width: 576px) {
      .card {
        padding: 2rem 1.5rem !important;
        margin: 0 1rem;
      }
      h2.display-6 {
        font-size: 1.8rem;
      }
      .btn-primary {
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
      }
      span[style*="font-size: 4rem"] {
        font-size: 3rem;
      }
    }
  </style>
</body>
</html>