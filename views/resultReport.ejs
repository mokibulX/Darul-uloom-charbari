<!DOCTYPE html>
<html>
<head>
  <title>Result Report</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <div class="text-center mb-4">
      <h2>Result Report - <%= classInfo ? classInfo.name : "Unknown Class" %></h2>
      <p><strong>Exam:</strong> <%= examMonth %> <%= examYear %></p>
    </div>

    <table class="table table-bordered text-center">
      <thead>
        <tr>
          <th>Student Name</th>
          <th>Total Marks</th>
          <th>Status</th>
          <th>Division</th>
        </tr>
      </thead>
      <tbody>
        <% results.forEach(r => { %>
          <tr>
            <td><%= r.studentId ? r.studentId.name : "Unknown Student" %></td>
            <td><%= r.totalMarks %></td>
            <td><%= r.passFail %></td>
            <td><%= r.division %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
